<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
  </div>

  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content %><br>
  </div>

  <div class="field">
    <%= f.label :tags %><br>
    <% Tag.all.each do |tag| %>
      <%= check_box_tag 'post[tag_ids][]', tag.id, @post.tags.include?(tag), id: "tag_#{tag.id}" %>
    <%= label_tag "tag_#{tag.id}", tag.name.downcase %><br>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit "Create Post" %>
  </div>
<% end %>
